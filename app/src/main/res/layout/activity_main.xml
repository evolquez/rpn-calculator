<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgCalc"
    tools:context="com.oletob.calculadorarpn.ui.MainActivity">

    <TextView
        android:id="@+id/panelTextView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/white"
        android:gravity="bottom|right"
        android:padding="5dp"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0" />

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:columnCount="5"
        android:orientation="horizontal"
        android:useDefaultMargins="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/panelTextView"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/btnClear"
            style="@style/btnNumbers"
            android:layout_column="0"
            android:text="CLR" />

        <Button
            android:id="@+id/btnDelete"
            style="@style/btnNumbers"
            android:layout_column="0"
            android:text="DEL" />

        <Button
            android:id="@+id/btnEnter"
            style="@style/btnNumbers"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowSpan="2"
            android:background="@color/buttonBgControls"
            android:text="E\nn\nt\ne\nr" />

        <Button
            android:id="@+id/btn7"
            style="@style/btnNumbers"
            android:layout_column="1"
            android:layout_row="0"
            android:text="7" />

        <Button
            android:id="@+id/btn4"
            style="@style/btnNumbers"
            android:layout_column="1"
            android:text="4" />

        <Button
            android:id="@+id/btn1"
            style="@style/btnNumbers"
            android:layout_column="1"
            android:text="1" />

        <Button
            android:id="@+id/btn0"
            style="@style/btnNumbers"
            android:layout_column="1"
            android:text="0" />

        <Button
            android:id="@+id/btn8"
            style="@style/btnNumbers"
            android:layout_column="2"
            android:layout_row="0"
            android:text="8" />

        <Button
            android:id="@+id/btn5"
            style="@style/btnNumbers"
            android:layout_column="2"
            android:text="5" />

        <Button
            android:id="@+id/btn2"
            style="@style/btnNumbers"
            android:layout_column="2"
            android:text="2" />

        <Button
            android:id="@+id/btnDot"
            style="@style/btnNumbers"
            android:layout_column="2"
            android:text="." />

        <Button
            android:id="@+id/btn9"
            style="@style/btnNumbers"
            android:layout_column="3"
            android:layout_row="0"
            android:text="9" />

        <Button
            android:id="@+id/btn6"
            style="@style/btnNumbers"
            android:layout_column="3"
            android:text="6" />

        <Button
            android:id="@+id/btn3"
            style="@style/btnNumbers"
            android:layout_column="3"
            android:text="3" />

        <Button
            android:id="@+id/btnSymbol"
            style="@style/btnNumbers"
            android:layout_column="3"
            android:text="+-" />

        <Button
            android:id="@+id/btnDevide"
            style="@style/btnNumbers"
            android:layout_column="4"
            android:layout_row="0"
            android:background="@color/buttonBgControls"
            android:text="/" />

        <Button
            android:id="@+id/btnMultiply"
            style="@style/btnNumbers"
            android:layout_column="4"
            android:background="@color/buttonBgControls"
            android:text="X" />

        <Button
            android:id="@+id/btnSubtract"
            style="@style/btnNumbers"
            android:layout_column="4"
            android:background="@color/buttonBgControls"
            android:text="-" />

        <Button
            android:id="@+id/btnSum"
            style="@style/btnNumbers"
            android:layout_column="4"
            android:background="@color/buttonBgControls"
            android:text="+" />

    </GridLayout>
</android.support.constraint.ConstraintLayout>